@model interaktiva20_2.Models.ViewModels.MovieViewModel

@section MyStylesheets
{
    <link rel="stylesheet" href="/assets/css/style_home.css?v={random string}"> <!--la till ?v={random string} för att tvinga browsern att reloada css varje gång-->
    <link rel="stylesheet" href="/assets/css/style_nav_search_bar.css?v={random string}">
    <link rel="stylesheet" href="/assets/css/responsive_home.css?v={random string}">
}

@section MyHeader
{
    <header>
        <div class="headerContainer">
            <div class="headerTextContainer">
                <h1>Cineast Movie Database</h1>
                <p>Home for movie lovers</p>
            </div>
            <img class="headerImg" src="/assets/images/hero.jpg">
        </div>
    </header>
}

<main>
    <h2 class="topListHeader" id="anchorTopRated">Top Rated Movies</h2>
    <div class="topRatedList">
        @foreach (var movie in Model.TopRatedMovies)
        {
            <div class="movieContainer">
                <div class="movieCell">
                    <div class="movieCellContent">
                        <p class="movieNumber">No @Html.DisplayFor(item => movie.MovieNumber)</p>
                        <h4 class="movieTitle">@Html.DisplayFor(item => movie.Title)</h4>
                        <img class="moviePoster" src="@Html.DisplayFor(item => movie.Poster)">

                        <p class="likes movieP" data-like-dislike-text="likes" data-imdbid="@movie.ImdbId">@Html.DisplayFor(item => movie.NumberOfLikes)</p>
                        <p><button class="btnLike" data-btn-type="like" data-imdbid="@movie.ImdbId">Like</button> <button class="btnDislike" data-btn-type="dislike" data-imdbid="@movie.ImdbId">Dislike</button></p>

                        <p class="movieP"><b>Year:</b> @Html.DisplayFor(item => movie.Year)</p>
                        <p class="movieP"><b>IMDb Rating:</b> @Html.DisplayFor(item => movie.ImdbRating)</p>
                        <div class="plot">
                            <p class="moviePlot">@Html.DisplayFor(item => movie.Plot)</p>
                            <div class="readMore"><a class="more" data-imdbid="@movie.ImdbId"></a></div>
                        </div>
                        @Html.ActionLink("To Movie Details", "Index", "MovieDetail", new { imdbid = movie.ImdbId })
                    </div>
                    <img class="ticketImg" src="~/assets/images/ticket.svg">
                </div>
            </div>
        }
    </div>
    <div class="flexMovies" id="topFlex"></div> @*Kan man fixa det här med datasets?*@


    <h2 class="topListHeader" id="anchorMostPopular">Most Popular Movies</h2>
    <div class="mostPopularList">
        @foreach (var movie in Model.MostPopularMovies)
        {
            <div class="movieContainer">
                <div class="movieCell">
                    <div class="movieCellContent">
                        <p class="movieNumber">No @Html.DisplayFor(item => movie.MovieNumber)</p>
                        <h4 class="movieTitle">@Html.DisplayFor(item => movie.Title)</h4>
                        <img class="moviePoster" src="@Html.DisplayFor(item => movie.Poster)">
                        <p class="cmdbRating">Likes: @Html.DisplayFor(item => movie.NumberOfLikes) | Dislikes: @Html.DisplayFor(item => movie.NumberOfDislikes)</p>
                        <p>Year: @Html.DisplayFor(item => movie.Year)</p>
                        <p>IMDb Rating: @Html.DisplayFor(item => movie.ImdbRating)</p>
                        <div class="plot">
                            <p class="moviePlot">@Html.DisplayFor(item => movie.Plot)</p>
                            <div class="readMore"><a class="more" data-imdbid="@movie.ImdbId"></a></div>
                        </div>
                    </div>
                    <img class="ticketImg" src="~/assets/images/ticket.svg">
                </div>
            </div>
        }
    </div>
    <div class="flexMovies" id="mostPopularFlex"></div>


    <h2 class="topListHeader" id="anchorNeverRated">Have You Seen This?</h2>
    <div class="neverRatedList">
        @foreach (var movie in Model.NeverRatedMovies)
        {
            <div class="movieContainer">
                <div class="movieCell">
                    <div class="movieCellContent">
                        <h4 class="movieTitle">@Html.DisplayFor(item => movie.Title)</h4>
                        <img class="moviePoster" src="@Html.DisplayFor(item => movie.Poster)">
                        <p class="cmdbRating">Likes: @Html.DisplayFor(item => movie.NumberOfLikes) | Dislikes: @Html.DisplayFor(item => movie.NumberOfDislikes)</p>
                        <p>Year: @Html.DisplayFor(item => movie.Year)</p>
                        <p>IMDb Rating: @Html.DisplayFor(item => movie.ImdbRating)</p>
                        <div class="plot">
                            <p class="moviePlot">@Html.DisplayFor(item => movie.Plot)</p>
                            <div class="readMore"><a class="more" data-imdbid="@movie.ImdbId"></a></div>
                        </div>
                    </div>
                    <img class="ticketImg" src="~/assets/images/ticket.svg">
                </div>
            </div>
        }
    </div>
    <div class="flexMovies" id="neverRatedFlex"></div>
</main>
